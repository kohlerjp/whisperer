<h1>
	<img src="<%= @graph.get_picture(@profile["id"]) %>">
	<%= @profile["name"] %>
</h1>

<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.text_area :text, placeholder: "Compose new post" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

<ul>
	<% @user.posts.each do |post| %>
		<li>
			<%= post.text %>
		</li>
	<% end %>
</ul>

<%= @profile.inspect %>