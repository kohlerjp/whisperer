<div class="container">
<h1>
	<img src="<%= @graph.get_picture(@profile["id"]) %>">
	<%= @profile["name"] %>
</h1>

<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.text_area :text, placeholder: "Compose new post" %>
    <br/>
    <%= f.label :anonymous %>
    <%= f.check_box :anonymous,checked:true %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

<h2> <%= @profile["first_name"] %>'s posts </h2>
<ul>
	<% @user.posts.each do |post| %>
		<li>
			<%= link_to(post.text,post) %>
			<% if post.user_id == current_user.id %>
				| <%= link_to "delete", post, method: :delete %>
			<% end %>
		</li>
	<% end %>
</ul>

<h2>@Mentions</h2>
<ul>
<% @user.mentions.each do |mention| %>
	<li>
		<% display_text = mention.post.text %>
		<% my_uids = mention.post.text.scan(/@[^ \t]*/) %>
		
		<% my_uids.each do |my_uid| %>
		<% puts my_uid %>
			<% my_uid = my_uid.delete('@') %>
			<% display_text = display_text.sub(my_uid,getName(my_uid)) %>
		<% end %>
		<%= display_text %>
	</li>

<% end %>

</ul>

</div>
