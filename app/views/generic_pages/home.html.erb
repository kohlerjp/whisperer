<% if current_user %>

<% profile = @graph.get_object("me") %>
<% friends = @graph.get_connections("me", "friends") %>
<% friends_id_array = [] %>
<% friends.each do |friend| %>
  <% friends_id_array << friend["id"]  %>
 <% end %>
 <% friends_id_array << current_user.uid  %>

 <% feed_posts = Post.find_all_by_user_id(friends_id_array,limit: 30) %>


<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]> <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]> <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]> <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> 
<html lang="en" class="no-js"> <!--<![endif]-->
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

<title>Whisperer - Anonymous Gossip</title>

<!-- SEO -->
<meta name="description" content="Effortless event management software for online registration, check-in, nametags, surveys, and more.">
       <meta name="viewport" content="width=device-width">

       <!-- Social sharing -->
<meta property="og:type" content="website">
<meta property="og:title" content="post" />
<meta property="og:description" content="gossip" />
<meta property="og:image" content="person FB photo" />

<!-- CSS & Fonts -->
<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="font-icons/css/font-awesome.min.css">
<link rel="stylesheet" href="bootstrap/css/bootstrap.css">
       <link rel="stylesheet" href="css/master.css" />

       <!-- Favicon -->
       <link rel="icon" href="images/favicon.ico" type="image/x-icon" />

       <!-- Javascript -->
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
   <script src="http://code.jquery.com/ui/1.8.21/jquery-ui.min.js" type="text/javascript"></script>
       <script src="bootstrap/js/bootstrap.js"></script>
       <script src="javascript/modernizr-2.6.2-respond-1.1.0.min.js"></script>

   </head>
   <body>


   	<!-- white content area -->
   	<div class="content_area">

   	<!-- title and subtitle -->
   	<div class="container">

   	<% feed_posts.each do |post| %>
   		<div class="row stream_row">

     <!-- post -->
     <div class="col-md-7 stream_post">
     "<%= post.text %>"
     </div>

     <!-- person & sharing -->
     <div class="col-md-5">

     <!-- person -->
     <div class="post_box_person_stream">
                           <!-- photo -->
                           <div class="pull-left">
                           	<% if post.mentions.any? %>
                           		<%= image_tag "http://graph.facebook.com/#{post.mentions.first.user.uid}/picture?height=100&width=100", class: "img_face img-circle img-responsive" %>
                           	<% else %>
                           	 <%= image_tag "123.jpg", class:"img_face img-circle img-responsive" %>
                           	<% end %>
                               
                           </div>
                           <div class="pull-left">
                           	<% if post.mentioned_users.any? %>
                              <div class="post_caption">
                               posted about
                              </div>
                              <div class="post_name">
                               <%= post.mentions.first.user.name %>
                              </div>
                              <% else %>
                              	<div class="post_caption">
                               posted about
                              </div>
                              <div class="post_name">
                               ???
                              </div>

                              <% end %>
                              <div class="post_date">
                               Posted <%= time_ago_in_words(post.created_at) %> ago
                              </div>
                           </div>
                           <div class="clearfix"></div>
                       </div>

                       <div style="margin-top:25px;">
                         <button type="button" class="btn btn-danger" id="cta_share_twitter">
                                   <i class="fa fa-twitter"></i> tweet
                               </button>

                               <button type="button" class="btn btn-info" id="cta_share_facebook">
                                   <i class="fa fa-facebook"></i> share
                               </button>
                       </div>

     </div>
     </div><!-- end stream row -->

   	<% end %>

   	</div><!-- close container - title and subtitle -->
   </div><!-- close content area -->


   </body>
 </html>









<% end %>

